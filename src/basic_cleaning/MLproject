name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: downloaded sample data for airbnb short term rental prices 
        type: string

      output_artifact:
        description: cleaned data set
        type: string

      output_type:
        description: type of output file (csv)
        type: string

      output_description:
        description: cleaned dataset with outliers and null values removed
        type: string

      min_price:
        description: min price for outlier removal
        type: float

      max_price:
        description: max price for outlier removal
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
